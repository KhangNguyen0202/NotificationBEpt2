@{
}
@inject IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BrainStormEra</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css/HomePage/homePage.css">
    <link rel="stylesheet" href="~/css/HomePage/landing_page.css">
    <link href="~/css/Notification/notification-modal.css" rel="stylesheet" />


</head>

<body>
    <header class="container-fluid sticky-header" style="background-color: white;">
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img src="~/lib/img/Login/BrainStormEra_logo.png" alt="BrainStormEra Logo" class="logo_img">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link" href="#">DASHBOARD</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">COURSE</a></li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Achievements", "Achievement")">ACHIEVEMENT</a>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="#">CERTIFICATE</a></li>
                        <li class="nav-item"><a class="nav-link" href="#">CHATBOT</a></li>
                    </ul>
                    <div class="profile d-flex align-items-center">
                        <i class="fas fa-bell icon" id="notificationIcon" data-bs-toggle="modal" data-bs-target="#notificationsModal"></i>
                        <a href="@Url.Action("Index", "Profile")">
                            <img src="@ViewBag.UserPicture" alt="Profile Picture" class="user_img" style="width: 40px; height: 40px; border-radius: 50%;">
                        </a>
                        <span class="d-none d-md-inline">@ViewBag.FullName</span>
                        <i class="fas fa-chevron-down d-none d-md-inline" aria-hidden="true"></i>
                        <a href="#" onclick="confirmLogout()" class="d-flex align-items-center" aria-label="Logout">
                            <i class="fa-solid fa-arrow-right-from-bracket exit_icon" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-5">
        <!-- Header Section -->
        <div class="header-section mb-5 w-100 d-flex">
            <h1>Hello <span style="color: var(--orange);">UserName</span>, Welcome to BrainStormEra. Let's study now!</h1>

            <div class="column col-avatar">
                <img src="" alt="Profile Picture" class="profile-pic">
                <div class="header-content">
                    <div class="info">
                        <div>Level 30</div>
                    </div>
                </div>
            </div>
            <div class="column col-course">
                <div>Course: 12/30 (6 certificates)</div>
                <div class="mt-2">Achievements:</div>
                <div class="d-flex align-items-center mt-1 achievementPic">
                    <img src="../assests/img/achievement1.png" alt="Achievement 1" class="img-fluid ms-2" style="width: 30px;">
                    <img src="../assests/img/achievement2.png" alt="Achievement 2" class="img-fluid ms-2" style="width: 30px;">
                    <img src="../assests/img/achievement3.png" alt="Achievement 3" class="img-fluid ms-2" style="width: 30px;">
                </div>
            </div>
            <div class="column col-training trainingBar">
                <div>Training: 0/1500</div>
                <div class="d-flex align-items-center justify-content-center mt-3">
                    <div class="progress me-3" style="width: 150px;">
                        <div class="progress-bar" role="progressbar" style="width: 70%;" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100">70/100</div>
                    </div>
                </div>
            </div>
            <div class="column col-ranking">
                <div>Ranking: 600</div>
            </div>
            <img src="/assests/img/robotlearner.png" alt="Robot Welcome" class="robot-img">

        </div>

        @await Html.PartialAsync("~/Views/Home/Notification/_NotificationsModal.cshtml")
        @await Html.PartialAsync("~/Views/Home/Notification/addNotificationModal.cshtml")
        @await Html.PartialAsync("~/Views/Home/Notification/editNotificationModal.cshtml")


        <!-- Recommend Course Section -->
        <div class="text-center mb-4 mt-6" style="margin-top: 50px;">
            <h3>Recommend Course</h3>
        </div>
        <div class="row justify-content-center mb-5">
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card course-card">
                    <img src="../assests/img/C-example.png" class="card-img-top" alt="Course Image">
                    <div class="card-body">
                        <h5 class="card-title">C Programming Full Course</h5>
                        <p class="card-text">Price: 700,000₫</p>
                        <p class="card-text">By Phuc Nguyen</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card course-card">
                    <img src="../assests/img/java-example.png" class="card-img-top" alt="Course Image">
                    <div class="card-body">
                        <h5 class="card-title">Java Programming Full Course</h5>
                        <p class="card-text">Price: 700,000₫</p>
                        <p class="card-text">By Microsoft</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card course-card">
                    <img src="../assests/img/C2-example.png" class="card-img-top" alt="Course Image">
                    <div class="card-body">
                        <h5 class="card-title">C# Programming Full Course</h5>
                        <p class="card-text">Price: 700,000₫</p>
                        <p class="card-text">By Meta</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <div class="card course-card">
                    <img src="../assests/img/java2-exmaple.png" class="card-img-top" alt="Course Image">
                    <div class="card-body">
                        <h5 class="card-title">JavaScript Full Course</h5>
                        <p class="card-text">Price: 700,000₫</p>
                        <p class="card-text">Created by WIT</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Teach By Big Companies Section -->
        <div class="text-center mb-4 companies">
            <h3>Teach By Big Companies</h3>
        </div>
        <div class="d-flex justify-content-around align-items-center mb-5 companies-pic">
            <img src="../assests/img/window.png" alt="Company 1" class="img-fluid" style="max-width: 100px;">
            <img src="../assests/img/gg.png" alt="Company 2" class="img-fluid" style="max-width: 100px;">
            <img src="../assests/img/amazon.png" alt="Company 3" class="img-fluid" style="max-width: 100px;">
        </div>

        <!-- Diverse Course Section -->
        <div class="text-center mb-4">
            <h3>Diverse Course</h3>
        </div>
        <div class="row text-center mb-5 diverse-course">
            <div class="col-md-4 col-sm-6 mb-3">
                <img src="../assests/img/design.png" alt="Design Image" class="img-fluid mb-2">
                <h5>Design</h5>
            </div>
            <div class="col-md-4 col-sm-6 mb-3">
                <img src="../assests/img/IT.png" alt="IT and Software Image" class="img-fluid mb-2">
                <h5>IT and Software</h5>
            </div>
            <div class="col-md-4 col-sm-6 mb-3">
                <img src="../assests/img/invest.png" alt="Invest Image" class="img-fluid mb-2">
                <h5>Invest</h5>
            </div>
            <div class="col-md-4 col-sm-6 mb-3">
                <img src="../assests/img/photo.png" alt="Photography Image" class="img-fluid mb-2">
                <h5>Photography</h5>
            </div>
            <div class="col-md-4 col-sm-6 mb-3">
                <img src="../assests/img/marketing.png" alt="Marketing Image" class="img-fluid mb-2">
                <h5>Marketing</h5>
            </div>
            <div class="col-md-4 col-sm-6 mb-3">
                <img src="../assests/img/bussiness.png" alt="Business Image" class="img-fluid mb-2">
                <h5>Business</h5>
            </div>
        </div>
    </div>

    <footer class="bg-secondary text-white py-4">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3 mb-md-0">
                    <h3>BrainStormEra</h3>
                    <div class="social-icons my-2">
                        <a href="https://facebook.com/brainstormera" aria-label="Facebook"><i class="fab fa-facebook me-2"></i></a>
                        <a href="https://instagram.com/brainstormera" aria-label="Instagram"><i class="fab fa-instagram me-2"></i></a>
                        <a href="https://twitter.com/brainstormera" aria-label="Twitter"><i class="fab fa-x-twitter"></i></a>
                    </div>
                    <p>2024 by BrainStormEra.</p>
                </div>
                <div class="col-md-4 mb-3 mb-md-0">
                    <h4>Contact Us</h4>
                    <p class="mb-1">Tel: 123-456-789</p>
                    <p>Email: brainstormera@edu.vn</p>
                </div>
                <div class="col-md-4">
                    <h4>Address</h4>
                    <p class="mb-1">123 Nguyen Van Cu, Cai Rang</p>
                    <p>District, Cantho, Vietnam</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Notification/notification.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#notificationsModal').on('shown.bs.modal', function () {
                $.get('@Url.Action("Notifications", "Notification")', function (data) {
                    // Thay thế nội dung của modal-body bằng dữ liệu trả về
                    $('#notificationsModal .modal-body').html($(data).find('.modal-body').html());
                    console.log('User Role:', '@ViewBag.UserRole');
                    console.log('User id:', '@ViewBag.UserId');

                });
            });
        });
        $(document).on('click', '.add-notification', function () {
            console.log('Add Notification button clicked');
            $('#notificationsModal').modal('hide');
            $('#addNotificationModal').modal('show');
        });

    </script>
</body>

</html>